<%if logged_in? %>
	<li>Hi, <%= current_user.username %></li>
	<li><%= link_to 'Log Out', logout_path, class: 'btn btn-small' %></li>
<% else %>
	<li>
		<%= link_to 'Register', register_path, class: 'btn btn-small' %>
	</li>
	<li>
		<%= link_to 'Log in', login_path, class: 'btn btn-small' %>
	</li>
<% end %>

<ul class='nav'>
	<li>
		<%= link_to "Postit!", root_path, :class => 'brand' %>
	</li>
	<li>
		<%= link_to 'link', '' %>
	</li>
</ul>
<% if logged_in? %>
<div class='btn-group nav_item'>
	<%= link_to 'New Category', new_category_path, class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
	Categories <span class='caret'></span>
	<% end %>
	<ul class='dropdown-menu'>
		<% Category.all.each do |category| %>
		<li>
			<%= link_to category.name, category_path(category) %> 
		</li>
		<% end %>
		<li class='divider'></li>
		<li>
			<%= link_to(new_category_path) do %>
			<i class="icon-plus"></i>
			New Category
			<% end %>
			</li>
	</ul>
</div>
<div class='btn btn-group nav-item'>
	<%= link_to('', class: 'btn btn-small dropdown-toggle', => 'dropdown') do %>
		<%= current_user.username %>
		<span class='caret'></span>
	<% end %>

	<ul class='dropdown_menu'>
	<li>
	<%= link_to edit_user_path(current_user) do %>
		<i class='icon-pencil'></i>
		edit profile
	<% end %>
	</li>
	<li>
	<%= link_to user_path(current_user) do %>
		<i class='icon-user'></i>
		view profile
	<% end %>
	</li>
	<li>
	<%= link_to logout_path do %>
		<i class='icon-circle-arrow-left'></i>
		logout
	</li>
	</ul>
</div>

<% else #logged out %>
	<div class='nav-item'>
		<%= link_to 'Register', register_post_path, class: 'btn btn-success btn-small' %>
	</div>
<% end %>


<div class='nav_item'>
	<%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-small' %>
</div>